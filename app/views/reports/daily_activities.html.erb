<div class="row ">
  <div class="col s12">
    <table class="bordered">
      <thead>
        <tr>
          <th class="">Unidad</th>
          <th class="">Fecha</th>
          <th class="">Km Recorridos</th>
          <th class="">Viajes</th>
          <th class="">Horas manejo</th>
          <th class="">Horas detenido</th>
          <th class="">Horas ralenti</th>
        </tr>
      </thead>
      <tbody>
          <% @da.each do |imei, da| %>
            <% da[:activities].each do |activity|%>
            <tr>
            <td class="">
            <%= Device.find_by(imei: imei).name %>  
            </td>
            <td class="">
            <%= activity[:date].strftime("%d/%m/%Y") %>  
            </td>
            <td class="">
            <%= activity[:distance] %>  
            </td>
            <td class="">
            <%= activity[:trips] %>  
            </td>
            <td class="">
            <%= activity[:drive_hours] %>  
            </td>
            <td class="">
            <%= activity[:stopoff_hours] %>
            </td>
            <td class="">
            <%= activity[:stopon_hours] %>  
            </td>
            </tr>
            <% end %>
          <% end %>
      </tbody>
    </table>
  </div>
</div>