<div id="stops_report_modal" class="modal">
  <form method="GET" action="<%= reports_stops_path %>" id="stops_report_form" target="_blank">
    <div class="modal-content">
      <h5 class="">Reporte de Detenciones</h5>
      <div class="row">
        <div class="input-field col s8">
          <input class="datepicker" type="date" id="stop_from_date" name="from_date" required />
          <label class="" for="stop_from_date">Desde Fecha</label>
        </div>
        <div class="input-field col s4">
            <label for="stop_from_time">Desde Hora</label>
            <input id="stop_from_time" class="timepicker" type="time" data-default="00:00:00" name="from_time" required>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s8">
          <input class="datepicker" type="date" id="stop_to_date" name="to_date" required />
          <label class="" for="stop_to_date">Hasta Fecha</label>
        </div>
        <div class="input-field col s4">
            <label for="stop_to_time">Hasta Hora</label>
            <input id="stop_to_time" class="timepicker" type="time" data-default="00:00:00" name="to_time" required>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12">
          <input class="" type="number" id="stop_time_limit" min="1" name="time_limit" required />
          <label class="" for="stop_time_limit">Límite de Tiempo</label>
        </div>
      </div>
      <div class="row">
        <label>Unidades</label>
        <div class="input-field col s12">
          <select name="imeis[]" id="stops_devices" class="selectize" multiple required>
            <% (current_user.global_admin? ? Device : current_user.company.devices).all.each do |d| %>
            <option value="<%= d.imei %>"><%= d.name %></option>
            <% end %>
          </select>
        </div>
      </div>
    </div>
    <div class="modal-footer">
      <button type="submit" class="modal-action modal-close waves-effect waves-green btn-flat">Aceptar</button>
      <a class="modal-action modal-close waves-effect waves-green btn-flat">
        Cancelar
      </a>
    </div>
  </form>
</div>

