<!DOCTYPE html>
<html>
<head>
  <title>Gestsol</title>
  <%= csrf_meta_tags %>

  <%= stylesheet_link_tag    'login', media: 'all', 'data-turbolinks-track': 'reload' %>

  <link rel="stylesheet" href="http://fonts.googleapis.com/css?family=Roboto:300,400,500,700" type="text/css">
  <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">

  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
</head>

<body>
     <div class="section"></div>
  <main>
    <center>
      <%= image_tag 'logo-gps.png', class: 'responsive-img', style: 'width: 200px;' %>
      
      <div class="section"></div>

      <div class="subtitle">Innovamos pensando en mejores soluciones de negocios</div>
      <div class="section"></div>

      <div class="container">
        
        <div class="row">
          <div class="col s12">
            <%= image_tag 'icono-usuario.svg', class: 'responsive-img', style: 'width: 100px;' %>
          </div>
          <div class="col s12">
            <%= devise_error_messages! %>
            <div class="flash alert">
              <%= flash[:alert] %>
            </div>
            <div class="flash notice">
              <%= flash[:notice] %>
            </div>
          </div>
          <div class="col s12">
            <%= yield %>
          </div>           
          
          <div class="col s12">
            <%= render 'devise/shared/links' %>
          </div>        

        </div>       
      </div>      
    </center>
  </main>
  <%= javascript_include_tag 'login', 'data-turbolinks-track': 'reload' %>
</body>
</html>