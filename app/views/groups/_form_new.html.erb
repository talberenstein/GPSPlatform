<div id="new_group_modal" class="modal">
  <form method="POST" action="<%= groups_path %>" id="new_group_form" data-remote="true">
    <div class="modal-content">
        <h4>Nuevo Grupo</h4>

    <%= render 'shared/error_messages' %>
      <div class="row">
        <div class="input-field col s12">
          <input class="" type="text" id="new_group_name" name="group[name]" required />
          <label class="" for="new_group_name">Nombre</label>
        </div>
      </div>
      <% if current_user.global_admin? %>
      <div class="row">
        <label>Compañía</label>
        <div class="input-field col s12">
          <select name="group[company_id]" id="new_group_company_id" class="selectize" required>
            <% Company.all.each do |c| %>
            <option value="<%= c.id %>"><%= c.name %></option>
            <% end %>
          </select>
        </div>
      </div>
      <% end %>
  </div>
  <div class="modal-footer">
    <button type="submit" class="modal-action waves-effect waves-green btn-flat">Guardar</button>
    <a class="modal-action modal-close waves-effect waves-green btn-flat">
      Cerrar
    </a>
  </div>
      </form>

</div>
