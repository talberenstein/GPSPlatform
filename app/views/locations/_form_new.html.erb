<div id="new_location_modal" class="modal map">
		<form method="POST" action="<%= locations_path %>" id="new_location_form" data-remote="true">

				<div class="modal-content">
						<h4>Nueva ubicación</h4>

						<%= render 'shared/error_messages' %>
						<div class="row">
								<div class="input-field col s6">
										<input class="location_input" type="text" id="new_location_name" name="location[location_name]" required/>
										<label for="new_location_name">Nombre</label>
								</div>
								<div class="input-field col s6">
										<input class="location_input" id="location_search_box_location_new" type="text" size="50" placeholder="Buscar...">
										<label for="location_search_box_location">Buscar dirección</label>
								</div>
								<div class="input-field col s12">
										<input class="location_input" id="location_location_name" type="text" name="location[location_address]" readonly>
										<input class="location_input" type="hidden" id="location_search-box-point" name="location[coordinate]">
										<label for="location_location_name">Dirección</label>
								</div>
						</div>

						<div id="location_new_map" style="width: 100%; height: 300px;">
						</div>
				</div>
				<div class="modal-footer">
						<button type="submit" class="modal-action waves-effect waves-green btn-flat">Guardar</button>
						<a class="modal-action modal-close waves-effect waves-green btn-flat">
								Cerrar
						</a>
				</div>
		</form>

</div>
