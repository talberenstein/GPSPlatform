<div id="new_company_modal" class="modal">
  <form method="POST" action="<%= companies_path %>" id="new_company_form" data-remote="true">
    <div class="modal-content">
      <h4 class="">Nueva Compañía</h4>
      <%= render 'shared/error_messages' %>
      <div class="row">
        <div class="input-field col s12">
          <input class="" type="text" id="new_company_name" name="company[name]" required />
          <label class="" for="new_company_name">Nombre</label>
        </div>
      </div>
    </div>
    <div class="modal-footer">
      <button type="submit" class="modal-action waves-effect waves-green btn-flat">Guardar</button>
      <a class="modal-action modal-close waves-effect waves-green btn-flat">
        Cerrar
      </a>
    </div>
  </form>
</div>
