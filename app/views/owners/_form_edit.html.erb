<div id="edit_owner_modal" class="modal">
  <form method="PUT" action="<%= owners_path %>" id="edit_owner_form" data-remote="true">

    <div class="modal-content">
      <h4>Editar propietarios de carga</h4>

      <%= render 'shared/error_messages' %>
      <div class="row">
        <div class="input-field col s12">
          <input class="" type="text" id="edit_owner_name" name="owner[owner_name]" required/>
          <label class="" for="edit_owner_name">Nombre</label>
        </div>
      </div>

      <% if current_user.global_admin? %>
          <div class="row">
            <label>Ubicaci√≥n</label>
            <div class="input-field col s12">
              <select name="owner[location_id]" id="edit_owner_location_id" class="selectize" required>
                <% Location.all.each do |l| %>
                    <option value="<%= l.id %>"><%= l.location_name %></option>
                <% end %>
              </select>
            </div>
          </div>
      <% end %>

    </div>
    <div class="modal-footer">
      <button type="submit" class="modal-action waves-effect waves-green btn-flat">Guardar</button>
      <a class="modal-action modal-close waves-effect waves-green btn-flat">
        Descartar
      </a>
    </div>
  </form>

</div>
