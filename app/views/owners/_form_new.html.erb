<div id="new_owners_modal" class="modal">
  <form method="POST" action="<%= owners_path %>" id="new_owner_form" data-remote="true">
    <div class="modal-content">
      <h4>Nuevo propietario de cargas</h4>

      <%= render 'shared/error_messages' %>

      <div class="row">
        <div class="input-field col s12">
          <input class="" type="text" id="new_owner_name" name="owner[owner_name]" required />
          <label class="" for="new_owner_name">Nombre</label>
        </div>
      </div>

      <div class="row">
        <label>Ubicaci√≥nes preestablecidas</label>
        <div class="input-field col s12">
          <select name="owner[location_id]" id="new_owner_location_id" class="selectize" required>
            <% Location.all.each do |l| %>
                <option value="<%= l.id %>"><%= l.location_name %></option>
            <% end %>
          </select>
        </div>
      </div>



    </div>
    <div class="modal-footer">
      <button type="submit" class="modal-action waves-effect waves-green btn-flat">Guardar</button>
      <a class="modal-action modal-close waves-effect waves-green btn-flat">
        Cerrar
      </a>
    </div>
  </form>
</div>
