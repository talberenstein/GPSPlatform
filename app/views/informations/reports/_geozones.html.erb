<div class="row report_tab" id="report_tab_geozone" hidden>
  <div class="col s12">
    <div class="card">
      <div class="card-content ">
        <span class="card-title">Entrada y Salida de Geo - Zonas</span>
        <div class="row">
          <form class="col s12">
            <div class="row">
              <div class="input-field col s3">
                <i class="material-icons prefix">date_range</i>
                <input class="datepicker_information" type="date" id="report_i_date_geozone" name="report_i_date" required/>
                <label class="" for="report_i_date">Fecha inicial</label>
              </div>
              <div class="input-field col s3">
                <i class="material-icons prefix">date_range</i>
                <input class="datepicker_information" type="date" id="report_f_date_geozone" name="report_f_date" required/>
                <label class="" for="report_f_date">Fecha final</label>
              </div>

              <div class="input-field col s3">
                <i class="material-icons prefix">time_range</i>
                <input class="timepicker_information_start" type="time" id="report_i_time_geozone" name="report_i_time" required/>
                <label class="" for="report_i_time">Hora Inicial</label>
              </div>

              <div class="input-field col s3">
                <i class="material-icons prefix">time_range</i>
                <input class="timepicker_information_final" type="time" id="report_f_time_geozone" name="report_f_time" required/>
                <label class="" for="report_f_time">Hora final</label>
              </div>
              <!--<div class="input-field col s3">
                  <i class="material-icons prefix">trending_up</i>
                  <input id="report_i_geozone" type="number" class="validate" value="0">
                  <label for="report_i_geozone">Velocidad inicial (Km/h)</label>
              </div>-->
              <div class="row">

                <div class="input-field col s3">
                  <select name="imeis[]" id="geozones_devices" class="selectize" multiple required>
                    <% (current_user.global_admin? ? Device : current_user.company.devices).all.each do |d| %>
                        <option value="<%= d.imei %>"><%= d.name %></option>
                    <% end %>
                  </select>
                  <label>Unidades</label>
                </div>
              </div>
              <div class="col s12 right">
                <a class="waves-effect waves-light btn right" id="search_geozone_report"><i class="material-icons left">search</i>Buscar</a>
              </div>
            </div>
            <div class="row">
              <table id="geozone_reports_table" class="display compact cell-border stripe" cellspacing="0" width="100%">
                <thead>
                <tr>
                  <th>Fecha</th>
                  <th>Nombre Geo-Zona</th>
                  <th>Unidad</th>
                  <th>Hora de Ingreso</th>
                  <th>Lugar de Ingreso</th>
                  <th>Od贸metro al Ingreso</th>
                  <th>Hora de Egreso</th>
                  <th>Lugar de Egreso</th>
                  <th>Od贸metro al Egreso</th>
                  <th>Tiempo de Permanencia</th>
                  <th>Diferencia del Od贸metro</th>
                  <th>Graficar</th>

                </tr>
                </thead>
              </table>
            </div>
          </form>
        </div>
      </div>

    </div>
  </div>
</div>


