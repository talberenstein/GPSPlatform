<div class="row report_tab" id="report_tab_playback">
		<div class="col s12">
				<div class="card">
						<div class="card-content ">
								<span class="card-title">Reproducción Dinámica de Viajes</span>
								<div class="row">
										<form class="col s12">
												<div class="row">
														<div class="input-field col s3">
																<i class="material-icons prefix">date_range</i>
																<input class="datepicker_information" type="date" id="report_i_date_playback" name="report_i_date" required/>
																<label class="" for="report_i_date_playback">Fecha inicial</label>
														</div>
														<div class="input-field col s3">
																<i class="material-icons prefix">date_range</i>
																<input class="datepicker_information" type="date" id="report_f_date_playback" name="report_f_date" required/>
																<label class="" for="report_f_date_playback">Fecha final</label>
														</div>

													<div class="input-field col s3">
														<i class="material-icons prefix">time_range</i>
														<input class="timepicker_information_start" type="time" id="report_i_time_playback" name="report_i_time" required/>
														<label class="" for="report_i_time">Hora Inicial</label>
													</div>

													<div class="input-field col s3">
														<i class="material-icons prefix">time_range</i>
														<input class="timepicker_information_final" type="time" id="report_f_time_playback" name="report_f_time" required/>
														<label class="" for="report_f_time">Hora final</label>
													</div>

														<div class="input-field col s3">
																<select name="imeis[]" id="playbacks_devices" class="selectize" required>
																		<% (current_user.global_admin? ? Device : current_user.company.devices).all.each do |d| %>
																				<option value="<%= d.imei %>"><%= d.name %></option>
																		<% end %>
																</select>
																<label>Unidades</label>
														</div>

														<div class="col s3">
																<a class="waves-effect waves-light btn right" id="search_playback_report"><i class="material-icons left">search</i>Buscar</a>
														</div>
												</div>
												<div class="row">
														<div id="playback_map" style="width: 100%;height: 400px;"></div>
												</div>

												<div class="row">
														<div class="col s12">
																<div class="card">
																		<div class="card-content" style="height: 75px;">
																				<div class="col s3">
																						<a class="play-pause play btn">
																								<i class="material-icons">play_arrow</i>
																						</a>
																						<a class="play-pause pause btn" style="display: none">
																								<i class="material-icons">pause</i>
																						</a>
																				</div>
																				<div class="col s9">
																						<div style="top: 9px;"  id="time-slider"></div>
																				</div>


																		</div>

																</div>
														</div>
												</div>


												<div class="row">


														<label for="" id="cursor-time"></label>
														<label for="" id="cursor-time-txt"></label>


														<li><strong>Fecha:</strong> <span id="date"></span></li>
														<li><strong>Hora:</strong> <span id="time"></span></li>
														<li><strong>Velocidad:</strong> <span id="velocity"></span></li>

													<label for="" id="cursor-time"></label>
													<label for="" id="cursor-time-txt"></label>


													<li><strong>Pánico:</strong> <span id="date"></span></li>
													<li><strong>Puerta:</strong> <span id="time"></span></li>
													<li><strong>Desenganche:</strong> <span id="velocity"></span></li>
												</div>

										</form>
								</div>
						</div>

				</div>
		</div>

</div>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/noUiSlider/9.2.0/nouislider.min.css">
<script src="https://cdnjs.cloudflare.com/ajax/libs/noUiSlider/9.2.0/nouislider.min.js"></script>