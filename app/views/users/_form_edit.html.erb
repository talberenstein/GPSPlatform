<div id="edit_user_modal" class="modal">
  <form method="PUT" action="<%= users_path %>" id="edit_user_form" data-remote="true">
    <div class="modal-content">
        <h4>Editar Usuario</h4>

      <%= render 'shared/error_messages' %>
      <div class="row">
        <div class="input-field col s12">
          <input class="" type="text" id="edit_user_email" name="user[email]" required />
          <label class="" for="edit_user_email">Email</label>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12">
          <input class="" type="password" id="edit_user_password" name="user[password]" />
          <label class="" for="edit_user_password">Clave</label>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12">
          <input class="" type="password" id="edit_user_password_confirmation" name="user[password_confirmation]" />
          <label class="" for="edit_user_password_confirmation">Confirmación de Clave</label>
        </div>
      </div>
      <div class="row">
        <label>Rol</label>
        <div class="input-field col s12">
          <select name="user[role]" id="edit_user_role" class="selectize" required>
            <% if current_user.global_admin? %>
            <option value="global_admin">Admin Global</option>
            <% end %>
            <option value="company_admin">Admin Compañía</option>
            <option value="company_viewer">Usuario Compañía</option>
          </select>
        </div>
      </div>
      <% if current_user.global_admin? %>
      <div class="row">
        <label>Compañía</label>
        <div class="input-field col s12">
          <select name="user[company_id]" id="edit_user_company_id" class="selectize">
            <% Company.all.each do |c| %>
            <option value="<%= c.id %>"><%= c.name %></option>
            <% end %>
          </select>
        </div>
      </div>
      <% end %>
    </div>
    <div class="modal-footer">
      <button type="submit" class="modal-action waves-effect waves-green btn-flat">Guardar</button>
      <a class="modal-action modal-close waves-effect waves-green btn-flat">
        Cerrar
      </a>
    </div>
  </form>
</div>
