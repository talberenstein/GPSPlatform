= form_for @command_request do |f|
  - if @command_request.errors.any?
    #error_explanation
      %h2= "#{pluralize(@command_request.errors.count, "error")} prohibited this command_request from being saved:"
      %ul
        - @command_request.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :user
    = f.text_field :user
  .field
    = f.label :request_time
    = f.datetime_select :request_time
  .field
    = f.label :command_text
    = f.text_field :command_text
  .field
    = f.label :status
    = f.number_field :status
  .field
    = f.label :result_time
    = f.datetime_select :result_time
  .actions
    = f.submit 'Save'
