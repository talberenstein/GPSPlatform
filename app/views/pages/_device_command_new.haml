    %i.material-icons power_settings_new
  %a#send_command_on.tooltipped.btn-floating.btn-large.waves-effect.waves-light.green.darken-3{"data-position" => "top", "data-target" => "send_command_modal", "data-tooltip" => "Enviar Encendido"}
    %i.material-icons power_settings_new
